.counter
	display: inline-block
	padding: 40px 60px

	.holder
		font-size: 0

	input[ type = number ]
		text-align: center
		border: 1px solid #eee
		font-size: 45px
		display: block
		margin: 10px 0
		border-radius: 10px
		max-width: 150px
		padding-left: 15px

	button
		padding: 10px 25px 20px
		line-height: 35px
		border: none
		color: #fff
		background-color: #53bf6b
		font-size: 35px
		margin: 0 5px
		cursor: pointer
		border-radius: 5px
